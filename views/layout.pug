doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible' content='ie=edge')
        meta(name='renderer' content='webkit')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

        block title
            title Pages

        link(rel='stylesheet' href='https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.css')
        link(rel='stylesheet' href='https://cdn.bootcss.com/admin-lte/2.4.3/css/AdminLTE.min.css')
        link(rel='stylesheet' href='https://cdn.bootcss.com/admin-lte/2.4.3/css/skins/skin-black-light.min.css')
        link(rel='stylesheet' href='https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet' href='https://cdn.bootcss.com/ionicons/4.1.2/css/ionicons.min.css')

        block stylesheets

        link(rel='stylesheet' href=urls.generate('/assets/stylesheets/dashboard.css'))

