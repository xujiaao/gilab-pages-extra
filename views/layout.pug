        <![endif]-->

    block body
        body.hold-transition.skin-black-light.sidebar-mini
            script(type='text/javascript').
                if (window.localStorage) {
                    if (window.localStorage['admin.sidebar'] === 'collapsed') {
                        document.body.className += ' sidebar-collapse';
                    }
                }

            div.wrapper
                include includes/header
                include includes/sidebar

                block content

            include includes/scripts
            script(type='text/javascript').
                if (window.localStorage) {
                    $(function () {
                        var body = $('body');

                        body.bind('expanded.pushMenu', function () {
                            window.localStorage['admin.sidebar'] = 'expanded';
                        });

                        body.bind('collapsed.pushMenu', function () {
                            window.localStorage['admin.sidebar'] = 'collapsed';
                        });
                    });
                }

            block scripts